<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGray"
    tools:context=".activity.SignInActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Back -->
        <ImageView
            android:id="@+id/imageView"
            style="@style/ic_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            style="@style/tiltle_sign_in"
            android:text="@string/create_new_pass"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/descText"
            style="@style/introduc_sign_in"
            android:text="@string/content_screen_create"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Current Password -->
        <TextView
            android:id="@+id/currentPassLabel"
            style="@style/lable_tv1"
            android:text="Password"
            app:layout_constraintTop_toBottomOf="@id/descText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/style_edittext"
            android:padding="15dp"
            android:drawableLeft="@drawable/img"
            android:drawableRight="@drawable/ic_disable"
            android:inputType="textPassword"
            android:textColorHint="#9E9F9F"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/currentPassLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- New Password -->
        <TextView
            android:id="@+id/newPassLabel"
            style="@style/lable_tv1"
            android:text="@string/new_pass"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_pass"
            android:background="@drawable/style_edittext"
            android:padding="15dp"
            android:drawableLeft="@drawable/img"
            android:drawableRight="@drawable/ic_disable"
            android:inputType="textPassword"
            android:textColorHint="#9E9F9F"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/newPassLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Confirm New Password -->
        <TextView
            android:id="@+id/cfNewPassLabel"
            style="@style/lable_tv2"
            android:text="@string/cf_new_pass"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtNewPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtCfPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cf_new_pass"
            android:background="@drawable/style_edittext"
            android:padding="15dp"
            android:drawableLeft="@drawable/img"
            android:drawableRight="@drawable/ic_disable"
            android:inputType="textPassword"
            android:textColorHint="#9E9F9F"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/cfNewPassLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Button section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_top"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentLayout"
        app:layout_constraintVertical_bias="0.894">

        <Button
            android:id="@+id/btnCreateNewPassword"
            style="@style/orange_btn"
            android:text="Create New Password" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
