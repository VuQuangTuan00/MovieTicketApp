<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvRateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate this Movie"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvRateSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did you enjoy the movie?"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center"
            android:layout_marginTop="12dp"/>

        <!-- Grid 2 hàng 5 cột chứa 10 star -->
        <GridLayout
            android:id="@+id/gridStars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:layout_marginTop="16dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Tạo 10 ImageView, id star1..star10, tag tương ứng 1..10 -->
            <!-- Ví dụ star1 -->
            <ImageView
                android:id="@+id/star1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="1"/>
            <ImageView
                android:id="@+id/star2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="2"/>
            <ImageView
                android:id="@+id/star3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="3"/>
            <ImageView
                android:id="@+id/star4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="4"/>
            <ImageView
                android:id="@+id/star5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="5"/>
            <ImageView
                android:id="@+id/star6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="6"/>
            <ImageView
                android:id="@+id/star7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="7"/>
            <ImageView
                android:id="@+id/star8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="8"/>
            <ImageView
                android:id="@+id/star9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="9"/>
            <ImageView
                android:id="@+id/star10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_outline"
                android:tag="10"/>
            <!-- copy và đổi id thành star2..star10, tag="2"..tag="10" tương tự -->
        </GridLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/commentInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Viết bình luận ngắn…">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="3"
                android:maxLength="200"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCancelRate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"/>

            <Button
                android:id="@+id/btnSubmitRate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Rate Now"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
