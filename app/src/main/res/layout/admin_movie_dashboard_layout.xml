<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:id="@+id/lnMovieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgMovieList"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_movie_list"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvMovieList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie List"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnGenreList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgGenreList"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_genre_list"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvGenreList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre List"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnCastList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgCastList"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_cast_list"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvCastList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cast List"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
