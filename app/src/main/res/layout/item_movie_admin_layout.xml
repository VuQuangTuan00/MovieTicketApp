<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/custom_border_genre_movie">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMovie"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:contentDescription="@string/movie"
        android:scaleType="centerCrop"
        android:src="@drawable/comic"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/imgMovie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tvTitleMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tvDirectorMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director: John Doe"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tvGenresMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genres: Action, Drama"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tvCastMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cast: Actor 1, Actor 2"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvRatingMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 4.5/5"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tvSynopsisMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synopsis: This is a brief description of the movie."
                android:textColor="@color/white"
                android:layout_marginBottom="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnExpandDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show More"
            android:textColor="@color/primaryOrange"
            android:background="@drawable/border_btn_book_now"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEditGener"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit"
                app:tint="@color/white"
                app:layout_constraintStart_toEndOf="@id/tvGenerMovie"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/btnDeleteGener"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete"
                app:tint="@color/white"
                app:layout_constraintStart_toEndOf="@id/btnEditGener"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
