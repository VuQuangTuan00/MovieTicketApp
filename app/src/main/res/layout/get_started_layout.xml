<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryOrange">

    <!-- Mockup Image (ảnh điện thoại) -->
    <ImageView
        android:id="@+id/mockupImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingTop="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_walkthrough"
        app:layout_constraintBottom_toTopOf="@+id/bottomContainer"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- BottomContainer - phần nội dung bo góc -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_bottom"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:paddingHorizontal="24dp"
            android:layout_height="wrap_content"
            android:text="@string/tiltle"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:paddingHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/introduce"
            android:textAlignment="center"
            android:textColor="#BBBBBB"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/primaryGray"
            />
        <!-- Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_started"
            style="@style/orange_btn"
            android:layout_marginHorizontal="20dp"
            android:text="@string/get_started"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
