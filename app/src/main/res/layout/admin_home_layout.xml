<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:id="@+id/lnMovieManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgMovieManager"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_not_image"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvMoviManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Manager"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnTheaterManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgTheaterManagement"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_not_image"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvTheaterManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theater Management"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnSaleStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgSaleStatistic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_not_image"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvSaleStatistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Statistics"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="23sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent" />

</LinearLayout>
