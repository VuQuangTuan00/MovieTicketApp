<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieTicketsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="orange_btn" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">@color/primaryOrange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ic_arrow" parent="Base.Theme.MovieTicketsApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/baseline_arrow_back_24</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="tiltle_sign_in" parent="Base.Theme.MovieTicketsApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="introduc_sign_in" parent="Base.Theme.MovieTicketsApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryLightGray</item>
    </style>

    <style name="lable_tv1" parent="Base.Theme.MovieTicketsApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>
    <style name="lable_tv2" parent="Base.Theme.MovieTicketsApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">116dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="BoderAvatarCast" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>
    <style name="BoderAvatarProfile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.MovieTicketsApp" parent="Base.Theme.MovieTicketsApp" />
</resources>